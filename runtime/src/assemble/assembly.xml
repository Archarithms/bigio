<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>runtime</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <fileMode>0664</fileMode>
            <directoryMode>0777</directoryMode>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>com.a2i.dms:dms-core</include>
                <include>com.a2i.dms:dms-agent</include>
            </includes>
            <excludes>
                <exclude>com.a2i.dms:dms-runtime</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <fileMode>0664</fileMode>
            <directoryMode>0777</directoryMode>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>com.a2i.dms:dms-core</exclude>
                <exclude>com.a2i.dms:dms-agent</exclude>
                <exclude>com.a2i.dms:dms-runtime</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <fileMode>0664</fileMode>
            <directoryMode>0777</directoryMode>
            <directory>./</directory>
            <outputDirectory>/logs</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <fileMode>0664</fileMode>
            <directoryMode>0777</directoryMode>
            <directory>./</directory>
            <outputDirectory>/components</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <fileMode>0664</fileMode>
            <directoryMode>0777</directoryMode>
            <directory>config</directory>
            <outputDirectory>/config</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>run.bat</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>run.sh</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>config/logback.xml</source>
            <outputDirectory>/config</outputDirectory>
        </file>
    </files>
</assembly>
